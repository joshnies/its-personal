---
import GitHubIcon from "../../public/icons/pixelarticons-github.svg";
import SunIcon from "../../public/icons/pixelarticons-sun-alt.svg";
---

<header>
    <div>
        Software Engineer.
        <br />
        Entrepreneur.
        <br />
        Designer.
    </div>
    <div>Â© Joshua Nies</div>
    <ul class="social">
        <li>
            <a
                href="https://github.com/joshnies"
                target="_blank"
                referrerpolicy="no-referrer"
            >
                <GitHubIcon />
            </a>
        </li>
        <li>
            <button>
                <SunIcon />
            </button>
        </li>
    </ul>
</header>
<style>
    header {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-column-end: span 4;
        gap: 0.25rem;
    }

    header .social {
        display: flex;
        gap: 0.5rem;
        grid-column-start: 4;
        justify-self: end;
        list-style: none;
    }

    header svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    header a {
        color: black;
    }

    header button {
        width: 1.25rem;
        height: 1.25rem;
        padding: 0;
        margin: 0;
        background: none;
        outline: none;
        border: none;
    }
</style>
