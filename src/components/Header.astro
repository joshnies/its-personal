---
import GradientBlur from "./GradientBlur.astro";
import GitHubIcon from "../../public/icons/pixelarticons-github.svg";
import MoonIcon from "../../public/icons/pixelarticons-moon.svg";
import SunIcon from "../../public/icons/pixelarticons-sun-alt.svg";
import XIcon from "../../public/icons/pixelarticons-close.svg";
---

<header>
    <GradientBlur id="header-blur" />
    <nav>
        <ul>
            <li class="logo"><a href="/">Joshua Nies.</a></li>
            <li class="social-x">
                <a
                    href="https://x.com/_joshnies"
                    target="_blank"
                    referrerpolicy="no-referrer"
                >
                    <XIcon />
                </a>
            </li>
            <li class="social-github">
                <a
                    href="https://github.com/joshnies"
                    target="_blank"
                    referrerpolicy="no-referrer"
                >
                    <GitHubIcon />
                </a>
            </li>
            <li class="theme-toggle">
                <button id="theme-toggle-button" type="button">
                    <MoonIcon id="theme-icon-dark" />
                    <SunIcon id="theme-icon-light" />
                </button>
            </li>
        </ul>
    </nav>
</header>
<style lang="scss">
    $theme-toggle-size: 1.125rem;

    header {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;

        width: 100%;
        height: 48px;
        grid-column-end: span 4;
        z-index: 10;
    }

    nav {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        z-index: 1;
    }

    ul {
        width: 100%;
        max-width: 1300px;
        display: flex;
        align-items: center;
        list-style: none;
        padding: 0 1rem;
        margin: 0 auto;
    }

    a {
        color: white;
        text-decoration: none;
        transition: 150ms ease-out;

        &:hover {
            opacity: 0.8;
        }

        &:active {
            opacity: 0.6;
        }
    }

    .logo {
        flex-grow: 1;
        font-size: 1rem;
        font-weight: 500;
    }

    .social-x {
        margin-right: 0.375rem;

        svg {
            width: 1.5rem;
            height: 1.5rem;
        }
    }

    .social-github {
        margin-right: 0.5rem;

        svg {
            width: 1.25rem;
            height: 1.25rem;
        }
    }

    button {
        width: $theme-toggle-size;
        height: $theme-toggle-size;
        padding: 0;
        margin: 0;
        background: none;
        outline: none;
        border: none;
        color: white;
        cursor: pointer;
        transition: 150ms ease-out;

        &:hover {
            opacity: 0.8;
        }

        &:active {
            opacity: 0.6;
        }
    }

    .theme-toggle {
        width: $theme-toggle-size;
        height: $theme-toggle-size;

        svg {
            width: $theme-toggle-size;
            height: $theme-toggle-size;
        }
    }

    .desktop {
        top: 0;
        bottom: default;
    }
</style>

<style lang="scss" is:global>
    #theme-icon-light {
        display: none;
    }

    #theme-icon-dark {
        display: block;
    }

    .light {
        #theme-icon-light {
            display: block;
        }

        #theme-icon-dark {
            display: none;
        }

        header {
            a,
            button {
                color: black;
            }
        }
    }
</style>

<script>
    import type { Theme } from "../lib/theme";
    import { getTheme, setTheme } from "../lib/theme";
    import { isMobile } from "../lib/util";

    function adaptToScreenSize() {
        const desktopClass = "desktop";
        const flipClass = "flip";
        const header = document.getElementsByTagName("header")[0];
        const blur = document.getElementById("header-blur");

        if (!isMobile()) {
            header.classList.add(desktopClass);
            blur?.classList.add(flipClass);
        } else {
            header.classList.remove(desktopClass);
            blur?.classList.remove(flipClass);
        }
    }

    function toggleTheme() {
        let newTheme: Theme;

        const currentTheme = getTheme();
        if (currentTheme === "dark") {
            newTheme = "light";
        } else {
            newTheme = "dark";
        }

        setTheme(newTheme);

        if (newTheme === "dark") {
            document.documentElement.classList.remove("light");
        } else {
            document.documentElement.classList.add("light");
        }
    }

    const themeToggleButton = document.getElementById("theme-toggle-button");
    themeToggleButton?.addEventListener("click", toggleTheme);

    adaptToScreenSize();
</script>
