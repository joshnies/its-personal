---
import GitHubIcon from "../../public/icons/pixelarticons-github.svg";
import SunIcon from "../../public/icons/pixelarticons-sun-alt.svg";
import XIcon from "../../public/icons/pixelarticons-close.svg";
---

<header>
    <nav>
        <ul>
            <li class="logo"><a href="/">Joshua Nies.</a></li>
            <li class="social-x">
                <a
                    href="https://x.com/_joshnies"
                    target="_blank"
                    referrerpolicy="no-referrer"
                >
                    <XIcon />
                </a>
            </li>
            <li class="social-github">
                <a
                    href="https://github.com/joshnies"
                    target="_blank"
                    referrerpolicy="no-referrer"
                >
                    <GitHubIcon />
                </a>
            </li>
            <li class="theme-toggle">
                <button>
                    <SunIcon />
                </button>
            </li>
        </ul>
    </nav>
</header>
<style lang="scss">
    $theme-toggle-size: 1.125rem;

    header {
        width: 100%;
        height: 48px;
        grid-column-end: span 4;
    }

    nav {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
    }

    ul {
        width: 100%;
        max-width: 1300px;
        display: flex;
        align-items: center;
        list-style: none;
        padding: 0 1rem;
        margin: 0 auto;
    }

    a {
        color: white;
        text-decoration: none;
        transition: 150ms ease-out;

        &:hover {
            opacity: 0.8;
        }

        &:active {
            opacity: 0.6;
        }
    }

    .logo {
        flex-grow: 1;
        font-size: 1rem;
        font-weight: 500;
    }

    .social-x {
        margin-right: 0.375rem;

        svg {
            width: 1.5rem;
            height: 1.5rem;
        }
    }

    .social-github {
        margin-right: 0.5rem;

        svg {
            width: 1.25rem;
            height: 1.25rem;
        }
    }

    button {
        width: $theme-toggle-size;
        height: $theme-toggle-size;
        padding: 0;
        margin: 0;
        background: none;
        outline: none;
        border: none;
        color: white;
        cursor: pointer;
        transition: 150ms ease-out;

        &:hover {
            opacity: 0.8;
        }

        &:active {
            opacity: 0.6;
        }
    }

    .theme-toggle {
        width: $theme-toggle-size;
        height: $theme-toggle-size;

        svg {
            width: $theme-toggle-size;
            height: $theme-toggle-size;
        }
    }
</style>
