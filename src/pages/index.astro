---
import { Image } from "astro:assets";

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ArrowDown from "../../public/icons/pixelarticons-arrow-down.svg";
import SelfImage from "../../public/self.jpg";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <section class="hero">
                <aside>
                    <h1>
                        Christ-follower, professional software engineer, forever
                        entrepreneur and UX designer. I create beautiful things
                        to help real people.
                    </h1>
                    <ul>
                        <li><a href="#articles">Articles</a></li>
                        <li><a href="#code">Code</a></li>
                        <li><a href="#design">Design</a></li>
                    </ul>
                    <ArrowDown class="arrow-down" />
                </aside>
                <div class="hero-img">
                    <Image src={SelfImage} alt="Selfie" />
                </div>
            </section>
        </main>
        <Footer />
    </body><!-- -->
    <style lang="scss">
        $hero-height: calc(100vh - 48px - 16px);
        $hero-max-height: 64rem;

        .hero {
            display: flex;
            gap: 2rem;
            width: 100%;
            height: 100vh;
            margin-top: 48px; /** header height */
            padding: 0 1rem;
        }

        aside {
            position: relative;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-auto-rows: 128px;
            gap: 32px 16px;
            width: 100%;
            height: $hero-height;
            max-height: $hero-max-height;

            $tag-size: 2.25rem;

            ul {
                display: flex;
                flex-wrap: wrap;
                align-items: start;
                column-gap: 0.5rem;
                grid-row: 4;
                height: calc(($tag-size * 2) + 1rem);

                list-style: none;
                margin: 0;
                padding: 0;
            }

            li {
                height: $tag-size;
                padding: 0;
                margin: 0;

                a {
                    display: flex;
                    align-items: center;
                    height: 100%;
                    border: 1px solid white;
                    border-radius: calc($tag-size / 2);
                    padding: 0 0.75rem;
                    margin: 0;
                    text-decoration: none;
                    font-size: 1.25rem;
                    font-weight: normal;
                    color: white;
                    transition: 150ms ease-out;

                    &:hover {
                        color: black;
                        background: white;
                    }
                }
            }

            .arrow-down {
                position: absolute;
                bottom: 0;
                right: 0;
                width: 1.5rem;
                height: 1.5rem;
            }
        }

        h1 {
            grid-column-end: span 2;
            grid-row-end: span 2;
            font-size: 3rem;
            font-weight: normal;
            letter-spacing: -2px;
            line-height: 3.125rem;
        }

        .hero-img {
            width: 100%;
            height: $hero-height;
            max-height: $hero-max-height;
            background: blue;

            img {
                height: 100%;
                object-fit: cover;
            }
        }
    </style>
</html>
