---
import { Image } from "astro:assets";

import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SelfImage from "../../public/self.jpg";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header />
        <main>
            <section class="hero">
                <aside>
                    <h1>
                        Christ-follower, professional software engineer, forever
                        entrepreneur and UX designer. I create beautiful things
                        to help real people.
                    </h1>
                    <ul>
                        <li><a href="#articles">Articles</a></li>
                        <li><a href="#code">Code</a></li>
                        <li><a href="#design">Design</a></li>
                    </ul>
                </aside>
                <div class="hero-img">
                    <Image src={SelfImage} alt="Selfie" />
                </div>
            </section>
        </main>
        <Footer />
    </body><style lang="scss">
        .hero {
            display: flex;
            gap: 2rem;
            width: 100%;
            height: 100vh;
            margin-top: 48px; /** header height */
            padding: 0 1rem;
        }

        aside {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-auto-rows: 128px;
            gap: 32px 16px;
            width: 100%;

            ul {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                grid-row: 4;

                list-style: none;
                margin: 0;
                padding: 0;
            }

            li {
                a {
                    border: 1px solid white;
                    border-radius: 18px;
                    padding: 0.25rem 0.75rem;
                    text-decoration: none;
                    font-size: 1.5rem;
                    font-weight: normal;
                    color: white;
                    transition: 150ms ease-out;

                    &:hover {
                        color: black;
                        background: white;
                    }
                }
            }
        }

        h1 {
            grid-column-end: span 2;
            grid-row-end: span 2;
            font-size: 3rem;
            font-weight: normal;
            letter-spacing: -2px;
            line-height: 3.125rem;
        }

        .hero-img {
            width: 100%;
            height: calc(100vh - 48px - 16px);
            max-height: 1024px;
            background: blue;

            img {
                height: 100%;
                object-fit: cover;
            }
        }
    </style>
</html>
