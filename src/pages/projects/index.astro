---
import { getCollection } from "astro:content";

import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Nav from "../../components/Nav.astro";

import ArrowOutward from "../../../public/icons/material_symbols_arrow_outward.svg";

import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { formatDate } from "../../lib/util";

const projects = (await getCollection("projects")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <Nav active="projects" />
      <div id="page-title">
        <h1>Projects</h1><span>({projects.length})</span>
      </div>
      <table>
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          {
            projects.map((p) => (
              <tr>
                <td class="title">
                  <a href={`projects/${p.id}`}>
                    {p.data.title} â€” {p.data.subtitle}
                    <ArrowOutward class="desktop" />
                  </a>
                </td>
                <td>{formatDate(p.data.pubDate)}</td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  #page-title {
    display: flex;
    gap: 0.5rem;
    height: 128px;

    h1 {
      font-size: 4.75rem;
      font-weight: 400;
      line-height: 4.625rem;
    }

    span {
      font-size: 1.5rem;
      font-weight: 400;
      padding-top: 0.25rem;
    }
  }

  thead {
    display: none;
  }

  tbody tr {
    height: 48px;
    font-size: 1rem;
    transition: 0.1s ease-out;
    border-top: 1px solid rgba(white, 0.1);

    &:hover {
      background: white;
      color: black;

      .title a {
        color: black;
      }
    }

    &:active {
      background: rgba(white, 0.8);
      color: black;

      .title a {
        color: black;
      }
    }

    .title {
      font-size: 2rem;
      padding-left: 2px;
      padding-right: 1rem;

      a {
        display: flex;
        gap: 8px;
        color: white;
        text-decoration: none;
      }

      svg {
        width: 32px;
        height: 32px;
        margin-top: 6px;
        color: black;
      }
    }
  }

  @media screen and (width < 1024px) {
    .desktop {
      display: none;
    }

    tbody tr {
      height: auto;
      font-size: 0.875rem;

      .title {
        font-size: 1.5rem;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
      }
    }
  }
</style>
